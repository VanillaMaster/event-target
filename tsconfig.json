{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2024",
        "moduleResolution": "NodeNext",
        "incremental": true,

        "resolvePackageJsonImports": true,
        "resolveJsonModule": true,
        "allowArbitraryExtensions": true,
        
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "exactOptionalPropertyTypes": true,
        "stripInternal": true,
        "verbatimModuleSyntax": true,

        "skipLibCheck": true,

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        
        "outDir": "dist",
        "types": [],
        // "paths": {}
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}