{
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Program (deno)",
            "type": "node",
            "program": "${workspaceFolder}/tests/index.js",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "${defaultBuildTask}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-wait=0.0.0.0:9230",
                "--allow-all",
                "--unstable-raw-imports",
                "--sloppy-imports",
                "--conditions=development",
                "--v8-flags=--expose-gc"
            ],
            "attachSimplePort": 9230
        },
        {
            "request": "launch",
            "name": "Launch Program (node)",
            "type": "node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/tests/index.js",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "${defaultBuildTask}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--expose-gc"
            ]
        }
    ]
}